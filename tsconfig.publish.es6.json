{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "dist/es6",
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "removeComments": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node"
  },
  "files": [
    "src/angularfire2.ts",
    "src/database/index.ts",
    "src/auth/auth.ts",
    "typings/index.d.ts",
    "node_modules/zone.js/dist/zone.js.d.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
