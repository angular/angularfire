{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "angularfire2": ["./core"],
      "angularfire2/auth": ["./auth"],
      "angularfire2/database": ["./database"],
      "angularfire2/firestore": ["./firestore"],
      "angularfire2/storage": ["./storage"],
      "angularfire2/database-deprecated": ["./database-deprecated"]
    },
    "rootDir": ".",
    "inlineSourceMap": true,
    "lib": ["es5", "dom", "es2015.promise", "es2015.collection", "es2015.iterable"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es2015"
  }
}
